@import '../../../src/styl/ColorPalette.styl'
/*functions*/
transition(prop, time)
  -webkit-transition: prop time
  -moz-transition: prop time
  -ms-transition: prop time
  -o-transition: prop time
  transition: prop time

scaleTo(s)
  -webkit-transform: scale(s)
  -moz-transform: scale(s)
  -ms-transform: scale(s)
  -o-transform: scale(s)
  transform: scale(s)

/*Styles*/
body
  background $DarkSkyBlue
  margin 0
  padding 0

aside#searchMenu
  position absolute
  left -100%
  width 100%
  height 100vh
  overflow hidden
  padding 0
  color $LighterGreen
  background rgba($DarkestBlue, 0.8)

#searchBarSVG
  position fixed
  margin-left 20px
  margin-top 20px
  cursor pointer

div#menuClose
  color $LightPink
  display none
  opacity 0.4
  font-size 20px
  right 10px
  top 10px
  position fixed
  cursor pointer
  transition(all, 0.2s)
  &:hover
    opacity 1
    scaleTo(1.2)

#searchBox
  display: none
  position fixed
  margin-top 19px
  margin-left 60px
  color rgba($LightGreen, 0.4)
  background none
  border none
  font-size 20px
  font-weight 100
  height 40px
  width 210px
  transition(all, 0.2s)
  &:focus
    color rgba($LightGreen, 1)
    outline none

div#primaryMenuContainer
  position relative
  height 100%
  top 70px

div#primaryMenuTabs
  position absolute
  border-bottom 1px solid rgba($LightDullGreen, 1)
  height 53.55px
  width 100%
  > div.tab
    margin-top 1px
    display inline-block
    padding-top 10px
    padding-left 20px
    padding-right 20px
    padding-bottom 10px
    font-size 20px
    opacity 0.3
    cursor pointer
    transition(all, 0.2s)
    &:hover
      opacity 1
  > div.activeTab
    opacity 1
    border-bottom solid 4px $LightDullGreen

div#primaryOptionWrapper
  position absolute
  width 100%
  height calc(100% - 120px)
  margin-top 53.55px
  overflow-x hidden
  overflow-y scroll

div#primaryMenuOptions
  padding-left 10px
  padding-right 10px
  padding-bottom 20px
  position relative
  text-align center
  height auto
  > div.menuOption
    position relative
    margin-top 10px
    display inline-block
    min-width 200px
    opacity 0
    padding 20px
    font-size 20px
    font-weight 600
    border-radius 5px
    cursor pointer
    &:hover
      background $DarkBlue
      scaleTo(0.9)
      transition(all, 0.2s)

div.searchOption
  margin-top 10px
  opacity 0
  background-color rgba($DarkestBlue, 0.5)
  font-size 20px
  border-radius 5px
  cursor pointer
  height 82px
  overflow hidden
  > div > div.searchNameInfo
    padding 5px
    background-color rgba($DarkBlue, 0.2)
  > div > div > div.searchName
    font-weight 600
  > div > div.searchDesc
    border-top 1px solid rgba($LightDullGreen, 0.4)
    padding-left 10px
    padding-right 10px
    height 40px
    padding-top 5px
    opacity 0.6
    font-size 12px
    overflow-y hidden
  > div > div > div > span.searchDate
    padding-left 10px
    color $LighterGreen
    opacity 0.5
  &:hover
    background $DarkBlue
    text-shadow 0 1px 2px rgba($DarkestBlue, 0.5)
    scaleTo(0.95)
    transition(all, 0.2s)
