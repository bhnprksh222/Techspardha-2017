@import 'ColorPalette.styl'

aside#searchMenu
  position absolute
  left -100%
  width 100%
  height 100vh
  overflow hidden
  padding 0
  color $LighterGreen
  background rgba($DarkestBlue, 0.8)

#searchBarSVG
  position fixed
  margin-left 20px
  margin-top 20px
  cursor pointer

div#menuClose
  color $LightPink
  display none
  opacity 0.4
  height 30px
  width 30px
  right 10px
  top 20px
  position fixed
  cursor pointer
  transition all 0.2s ease-in-out
  &:hover
    opacity 1
    transform scale(1.2)
  > svg
    height 30px
    fill $LightPink
    width 30px

#searchBox
  display: none
  position fixed
  margin-top 19px
  margin-left 60px
  color rgba($LightGreen, 0.4)
  background none
  border none
  font-size 20px
  font-weight 100
  height 40px
  width 210px
  transition all 0.2s ease-in-out
  &:focus
    color rgba($LightGreen, 1)
    outline none

div#primaryMenuContainer
  position relative
  height 100%
  top 70px

div#primaryMenuTabs
  position absolute
  border-bottom 1px solid rgba($LightDullGreen, 1)
  height 53.55px
  width 100%
  > div.tab
    margin-top 1px
    display inline-block
    width 50%
    margin-left -9px
    text-align center
    padding 10px
    padding-top 15px
    padding-bottom 12px
    font-size 15px
    opacity 0.3
    cursor pointer
    transition all 0.2s ease-in-out
    > div.tabLine
      position absolute
      bottom -4px
      height 4px
      width 0
      background-color $LightDullGreen
      transition all 0.2s ease-in-out
    &:hover
      opacity 1
      > span
        margin-left 10px
        transition all 0.2s ease-in-out
  > div.activeTab
    opacity 1
    > div.tabLine
      width 100%
      transition all 0.2s ease-in-out
  > div > span
    position absolute
    opacity 0.5
    left 15px
    top 18px

div#primaryOptionWrapper
  position absolute
  width 100%
  // Try to avoid calc() since older browsers won't be supported.
  height calc(100% - 120px)
  margin-top 53.55px
  overflow-x hidden
  overflow-y scroll

div#primaryMenuOptions
  padding-top 20px
  padding-left 10px
  padding-right 10px
  padding-bottom 20px
  position relative
  text-align center
  height auto
  > h3
    opacity 0.5
    font-size 20px
  > div.menuOption
    position relative
    margin 20px
    display inline-block
    width 250px
    opacity 0
    padding 20px
    font-weight 600
    font-size 20px
    border-radius 5px
    cursor pointer
    overflow-x hidden
    &:hover
      background $DarkBlue
      transform scale(0.9)
      transition all 0.2s ease-in-out

div.menuEventOption
  position relative
  margin 20px
  display inline-block
  width 250px
  opacity 0
  font-weight 600
  padding 20px
  font-size 15px
  border-radius 2px
  border 1px solid rgba(#fff, 0.5)
  cursor pointer
  overflow hidden
  &:hover
    background $DarkBlue
    transition all 0.2s ease-in-out
  > span.eventCorner
    width 10px
    height 10px
    background-color rgba(#fff, 0.5)
    position absolute
    bottom -5px
    right -5px
    transform rotate(45deg)

div.searchOption
  position relative
  display inline-block
  width 300px
  margin 20px
  margin-top 10px
  opacity 0
  background-color rgba($DarkestBlue, 0.5)
  font-size 15px
  border-radius 5px
  cursor pointer
  height 82px
  overflow hidden
  > div
    text-align center
  > div > div.searchNameInfo
    padding 5px
    background-color rgba($DarkBlue, 0.2)
  > div > div > div.searchName
    font-weight 600
  > div > div.searchDesc
    border-top 1px solid rgba($LightDullGreen, 0.4)
    padding-left 10px
    padding-right 10px
    height 40px
    padding-top 5px
    opacity 0.6
    font-size 12px
    overflow-y hidden
  > div > div > div > span.searchDate
    padding-left 10px
    color $LighterGreen
    opacity 0.5
  &:hover
    background $DarkBlue
    text-shadow 0 1px 2px rgba($DarkestBlue, 0.5)
    transition all 0.2s ease-in-out
