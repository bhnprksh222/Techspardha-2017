.Star {

  cursor: pointer;
  fill: #fff;

  .Shell {
    transform-origin: 12px 12px 0;
    animation-direction: alternate;
    animation-duration: 0.5s;
    animation-timing-function: ease-in-out;
    animation-iteration-count: infinite;
    animation-name: StarShellAnimation;
  }

  for $shell in (1..4) {
    .Shell:nth-child({$shell}) {
      fill-opacity: ($shell / 20);
      animation-delay: unit((0.3 - ($shell / 10)), 's');
    }
  }

}

@keyframes StarShellAnimation {
  from {
    opacity: 0;
    transform: scale(0.5);
  }
  to {
    opacity: 1;
    transform: scale(1.5);
  }

}