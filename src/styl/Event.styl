.Event text {
  font-family: $HeadingOneFontFamily;
  font-size: 1.6rem;
  font-weight: 300;
  fill: $SkyBlue;
  cursor: pointer;
  user-select: none;
  text-transform: capitalize;
  opacity: 0;
}

#EventSection {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 100vh;
  left: 0;
  z-index: 2;
}

#EventSVG {

  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;

  .Star {

    cursor: default;
    fill: $Yellow;

    .Shell {
      display: block;
      opacity: 0;
      animation: none;
    }

    .Shell.Animate {
      animation-duration: 3s;
      animation-name: EventSVGStarShellAnimation;
      animation-direction: normal;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
    }

    for $shell in (1..4) {
      .Shell:nth-child({$shell}) {
        fill-opacity: ($shell / 10);
        animation-delay: unit((1 - ($shell / 10)), 's');
      }
    }

  }

}

@keyframes EventSVGStarShellAnimation {
  0% {
    opacity: 0;
    transform: scale(0.5);
  }
  50% {
    opacity: 1;
    transform: scale(1.5);
  }
  100% {
    opacity: 0;
    transform: scale(2.5);
  }

}

#EventContentContainer {

  padding-top: 9.2rem;
  z-index: 2;
  overflow: auto;
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.7);
  user-select: none;

  > .row > div:nth-of-type(2) {
    text-align: right;
  }

  #EventClockSVG {
    width: 16rem;
    height: 16rem;
    user-select: none;
    margin: 1rem auto;
    display: none;
  }

  #EventClockInner {
    fill: $LightGreen;
    fill-opacity: 0.1;
  }

  #EventClockTick {
    fill: $DarkBlue;
    stroke: $Yellow;
    stroke-width: 20;
  }

  #EventClockOuter {
    fill: $DarkBlue;
  }

  #EventClockMinute {
    font-family: $HeadingTwoFontFamily;
    font-weight: 300;
    font-size: 96px;
    fill: $SkyBlue;
  }

  #EventClockSecond {
    font-family: $HeadingThreeFontFamily;
    font-weight: 200;
    font-size: 54px;
    fill: $DarkSkyBlue;
  }

}