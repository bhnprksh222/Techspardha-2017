{
  "title": "Techspardha2017",
  "version": "1.0.0",
  "description": "Front-end of the Techspardha 2017 website.",
  "contributors": [
    {
      "name": "Divya Mamgai",
      "email": "divyamamgai21@gmail.com",
      "url": "https://github.com/divyamamgai"
    },
    {
      "name": "Kaushik Sarma",
      "email": "kausyap10@gmail.com",
      "url": "https://github.com/kaushikSarma"
    }
  ],
  "main": "index.js",
  "dependencies": {
    "jquery": "latest",
    "gsap": "latest",
    "bootstrap": "latest"
  },
  "devDependencies": {
    "jshint": "latest",
    "fuse": "latest",
    "uglify-js": "latest",
    "stylus": "latest",
    "nib": "latest",
    "clean-css": "latest",
    "rimraf": "latest",
    "replace": "latest"
  },
  "scripts": {
    "lint": "jshint src/js",
    "prebuild:js": "npm run lint",
    "build:js": "fuse -i src/js/Main.js -o dist/resources/js/Main.js",
    "build:css": "stylus -u nib src/styl/Main.styl -o dist/resources/css/Main.css",
    "build": "npm run build:js && npm run build:css",
    "predeploy": "npm run clean",
    "deploy": "cp -r dist/* deploy/",
    "postdeploy": "uglifyjs deploy/resources/js/Main.js > deploy/resources/js/Main.min.js -mc && rimraf deploy/resources/js/Main.js && npm run scriptSourceFix && npm run CDNBootstrap && npm run CDNjQuery && npm run CDNTweenMax",
    "scriptSourceFix": "replace \"resources/js/Main.js\" \"resources/js/Main.min.js\" deploy -r --include=\"*.html\"",
    "CDNBootstrap": "replace \"../node_modules/bootstrap/dist/css/bootstrap.min.css\" \"https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css\" deploy -r --include=\"*.html\"",
    "CDNjQuery": "replace \"../node_modules/jquery/dist/jquery.min.js\" \"https://code.jquery.com/jquery-3.1.1.min.js\" deploy -r --include=\"*.html\"",
    "CDNTweenMax": "replace \"../node_modules/gsap/src/minified/TweenMax.min.js\" \"https://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.0/TweenMax.min.js\" deploy -r --include=\"*.html\"",
    "clean": "rimraf deploy/ && mkdir deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gawdsnitk/Techspardha2017.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gawdsnitk/Techspardha2017/issues"
  },
  "homepage": "https://github.com/gawdsnitk/Techspardha2017#readme"
}